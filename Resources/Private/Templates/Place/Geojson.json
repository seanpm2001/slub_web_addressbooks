<f:layout name="Json" />
<f:section name="main">
{
  "type": "FeatureCollection",
  "features": [
<f:for each="{places}" as="place" iteration="it">{
  "type": "Feature",
  "geometry": {
    "type": "Point",
    "coordinates": [{place.lon},{place.lat}]
  },
  "properties": <f:format.raw>{</f:format.raw>
    "name": "{place.place}",
    "url": "<f:uri.action action='timeline' pageUid='{settings.pidTimeline}' absolute='1' controller='Book' arguments='{placeId : place}' />"
  }
}<f:if condition="{it.isLast}"><f:then></f:then><f:else>,</f:else></f:if>
</f:for>
]
}
</f:section>
